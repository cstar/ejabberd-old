# $Id$

CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

INCLUDES = @ERLANG_CFLAGS@

LIBDIRS = @ERLANG_LIBS@

SUBDIRS = 

ERLSHLIBS = ../iconv_erl.so



OUTDIR = ..
EFLAGS = -I .. -pz ..
OBJS   = \
	$(OUTDIR)/mod_irc.beam \
	$(OUTDIR)/mod_irc_connection.beam \
	$(OUTDIR)/iconv.beam

all:    $(OBJS) $(ERLSHLIBS)

$(OUTDIR)/%.beam:       %.erl
	erlc -W $(EFLAGS) -o $(OUTDIR) $<



#all:	$(ERLSHLIBS)
#	erl -s make all report "{outdir, \"..\"}" -noinput -s erlang halt

$(ERLSHLIBS):	../%.so:	%.c
			$(CC) -Wall $(INCLUDES) $(CFLAGS) $(LDFLAGS) $(LIBDIRS) \
			$(subst ../,,$(subst .so,.c,$@)) \
			-lerl_interface @LIBICONV@ \
			-lei \
			-o $@ -fpic -shared \

clean:
	rm -f $(OBJS) $(ERLSHLIBS)

distclean: clean
	rm -f Makefile

TAGS:
	etags *.erl

