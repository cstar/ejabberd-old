# $Id$

CC = @CC@
CFLAGS = @CFLAGS@ @ERLANG_CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@ @ERLANG_LIBS@

SUBDIRS = 


OUTDIR = ..
EFLAGS = -I .. -pz ..
OBJS   = \
	$(OUTDIR)/ejabberd_odbc.beam \
	$(OUTDIR)/ejabberd_odbc_sup.beam \
	$(OUTDIR)/odbc_queries.beam

all:    $(OBJS)

$(OUTDIR)/%.beam:       %.erl
	@ERLC@ -W $(EFLAGS) -D@db_type@ -o $(OUTDIR) $<


clean:
	rm -f $(OBJS)

distclean: clean
	rm -f Makefile

TAGS:
	etags *.erl

